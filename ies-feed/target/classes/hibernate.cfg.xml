<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>

		<!-- Database connection setting for local server -->

		
		<property name="connection.url">jdbc:sqlserver://localhost;database=ies</property> 
		<property name="connection.username">sa</property> 
		<property name="connection.password">Welcome3</property> 
		
		
		<!-- Database connection setting for cloud server -->

		<!-- <property name="connection.url">jdbc:sqlserver://aptude.database.windows.net:1433;database=ies;user=aptude@aptude;password=Welcome3;encrypt=true;trustServerCertificate=false;hostNameInCertificate=*.database.windows.net;loginTimeout=30;</property> -->

		<!-- JDBC connection pool (use the built-in) -->
		<!-- <property name="connection.pool_size">1</property> -->

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.SQLServer2012Dialect</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hbm2ddl.auto">create</property>

		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.max_size">5</property>
		<property name="hibernate.c3p0.timeout">300</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">3000</property>

		<property name="jadira.usertype.autoRegisterUserTypes">true</property>
		
		<!-- Names the annotated entity class -->
		<mapping class="com.modetransportation.batch.model.Shipment" />
		<mapping class="com.modetransportation.batch.model.Shipment$Charges$Charge" />
		<mapping class="com.modetransportation.batch.model.Shipment$Contents$Content" />
		<mapping class="com.modetransportation.batch.model.Shipment$Routing$Segment" />
		<mapping class="com.modetransportation.batch.model.Party" />
		<mapping class="com.modetransportation.batch.model.Location" />
		<mapping class="com.modetransportation.batch.model.Reference" />
		<mapping class="com.modetransportation.batch.model.Container" />
		<mapping class="com.modetransportation.batch.model.Container$Charges$Charge" />
		<mapping class="com.modetransportation.batch.model.Container$Contents$Content" />
		<mapping class="com.modetransportation.batch.model.ap.ACCOUNTINGEVENT" />
		<mapping class="com.modetransportation.batch.model.ar.ACCOUNTINGEVENT" />

	</session-factory>

</hibernate-configuration>